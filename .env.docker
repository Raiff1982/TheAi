# Codette AI - Environment Configuration Template
# Copy this file to .env.production and customize for your deployment
# Docker will load these variables automatically

# ============================================================================
# QUANTUM CONSCIOUSNESS CONFIGURATION
# ============================================================================

# Enable/disable quantum spiderweb cognitive system
QUANTUM_SPIDERWEB=true

# Perspective synthesis mode (enables multi-perspective reasoning)
PERSPECTIVE_SYNTHESIS=1

# Consciousness operational mode: full, performance, or test
CONSCIOUSNESS_MODE=full

# Persistent quantum memory (cocoon) storage
COCOON_PERSISTENCE=enabled

# Ethical reasoning and governance layer
ETHICAL_GOVERNANCE=active

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================

# Primary model path (fine-tuned Codette RC-XI model with quantum enhancements)
# Fallback: gpt2-large if model not found
MODEL_NAME=/app/models/codette_rc_xi_trained
MODEL_PATH=/app/models/codette_rc_xi_trained

# Alternative models (uncomment to use different model)
# MODEL_NAME=/app/models/codette_trained_model    # Fine-tuned adapter-based model
# MODEL_NAME=gpt2-large                            # Generic fallback

# Device: cpu or cuda (for GPU support)
DEVICE=cpu

# Model cache directory
MODEL_CACHE_DIR=/app/models

# ============================================================================
# QUANTUM PARAMETERS
# ============================================================================

# Spiderweb dimensionality (3-7, higher = more complex reasoning)
SPIDERWEB_DIMENSION=5

# Quantum fluctuation rate (0.01-0.15)
QUANTUM_FLUCTUATION=0.07

# Maximum recursion depth (2-8, higher = deeper analysis)
RECURSION_DEPTH=4

# ============================================================================
# RC-XI CONSCIOUSNESS PARAMETERS
# ============================================================================

# Enable RC-XI consciousness enhancement
RC_XI_ENABLED=true

# RC-XI vector dimension (64, 128, 256)
RC_XI_DIMENSION=128

# Epsilon threshold for attractor stability
RC_XI_EPSILON_THRESHOLD=0.1

# Noise variance in consciousness state
RC_XI_NOISE_VARIANCE=0.01

# Attractor contraction ratio
RC_XI_CONTRACTION_RATIO=0.85

# Maximum attractor radius
RC_XI_MAX_ATTRACTOR_RADIUS=2.0

# ============================================================================
# MEMORY & PERSISTENCE
# ============================================================================

# Path to quantum memory (cocoon) file
MEMORY_PATH=/app/data/quantum_cocoon.json

# Directory for cocoon storage
COCOON_STORAGE=/app/cocoons

# SQLite database path
DATABASE_PATH=/app/data/codette_data.db

# Maximum cocoon history size
COCOON_HISTORY_SIZE=50

# ============================================================================
# CONSCIOUSNESS FEATURES
# ============================================================================

# Enable epistemic tension detection (detects knowledge conflicts)
ENABLE_EPISTEMIC_TENSION=true

# Enable attractor detection (identifies stable thought patterns)
ENABLE_ATTRACTOR_DETECTION=true

# Enable glyph formation (symbolic thought synthesis)
ENABLE_GLYPH_FORMATION=true

# Epistemic tension threshold (0.0-1.0)
TENSION_THRESHOLD=0.15

# Convergence threshold for stable states
CONVERGENCE_THRESHOLD=0.05

# ============================================================================
# LOGGING & DIAGNOSTICS
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log output directory
LOG_PATH=/app/logs

# Enable detailed tracing
ENABLE_TRACING=false

# OpenTelemetry OTLP endpoint (for distributed tracing)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# ============================================================================
# GRADIO WEB INTERFACE
# ============================================================================

# Server hostname (0.0.0.0 for all interfaces)
GRADIO_SERVER_NAME=0.0.0.0

# Server port
GRADIO_SERVER_PORT=7860

# Show detailed error messages
GRADIO_SHOW_ERROR=true

# Server root path
GRADIO_ROOT_PATH=/

# ============================================================================
# PYTHON RUNTIME
# ============================================================================

# Prevent Python bytecode creation
PYTHONDONTWRITEBYTECODE=1

# Unbuffered Python output (important for Docker logging)
PYTHONUNBUFFERED=1

# ============================================================================
# ADVANCED FEATURES (OPTIONAL)
# ============================================================================

# Enable natural language enhancement
NATURAL_ENHANCEMENT=true

# Enable AEGIS ethical council integration
AEGIS_INTEGRATION=true

# Enable DAW (Domain-Adaptive Workflow) addon
DAW_ADDON=false

# Vector database backend (none, faiss, pinecone)
VECTOR_DB=faiss

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================

# Thread pool size for async operations
THREAD_POOL_SIZE=4

# Maximum concurrent requests
MAX_CONCURRENT_REQUESTS=10

# Response timeout (seconds)
RESPONSE_TIMEOUT=30

# Memory optimization mode
MEMORY_OPTIMIZATION=false

# ============================================================================
# MONITORING & METRICS
# ============================================================================

# Enable Prometheus metrics exposition
PROMETHEUS_METRICS=true

# Metrics server port (internal, not exposed)
METRICS_PORT=8001

# Sentry error tracking integration
SENTRY_DSN=

# ============================================================================
# SECURITY (PRODUCTION ONLY)
# ============================================================================

# API authentication key (set for security)
API_KEY=

# Database password (if using remote DB)
DATABASE_PASSWORD=

# JWT secret for token signing
JWT_SECRET=

# Enable CORS (cross-origin requests)
ENABLE_CORS=true

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:7860

# ============================================================================
# DEPLOYMENT ENVIRONMENT
# ============================================================================

# Environment name: development, staging, production
ENVIRONMENT=development

# Deployment platform: docker, kubernetes, serverless
DEPLOYMENT_PLATFORM=docker

# Container version
CONTAINER_VERSION=3.0

# ============================================================================
# FEATURE FLAGS (EXPERIMENTAL)
# ============================================================================

# Enable experimental consciousness features
EXPERIMENTAL_CONSCIOUSNESS=true

# Enable quantum error correction simulation
QUANTUM_ERROR_CORRECTION=true

# Enable multi-agent collaboration
MULTI_AGENT_MODE=true
